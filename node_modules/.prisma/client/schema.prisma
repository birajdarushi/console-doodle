generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  level     String
  category  String
  message   String
  details   String?
}

model Deployment {
  id        String   @id @default(uuid())
  project   String
  status    String
  timestamp DateTime @default(now())
  details   String?
}

model Incident {
  id        String   @id @default(uuid())
  title     String
  date      DateTime @default(now())
  impact    String
  rootCause String
  status    String
  learning  String
  timeline  String?
}

model SystemConfig {
  key   String @id
  value String
}

model Visitor {
  id        String   @id @default(uuid())
  ip        String
  userAgent String?
  timestamp DateTime @default(now())
}
